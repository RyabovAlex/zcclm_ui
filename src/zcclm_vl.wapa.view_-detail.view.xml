<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns="sap.m" xmlns:core="sap.ui.core" controllerName="sap.cust.zcclm_vl.controller.Detail" displayBlock="true">                               
	<semantic:DetailPage id="detailpage" title="{i18n>detailTitle}" busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}">                                                                                                                           
		<semantic:content>                                                                                                                                                                                                                                           
			<ObjectHeader id="objectHeader" title="{LandscapeName}">                                                                                                                                                                                                    
				<ObjectAttribute text="{Description} "/>                                                                                                                                                                                                                   
			</ObjectHeader>                                                                                                                                                                                                                                             
			<FlexBox alignItems="Stretch" class="columns" justifyContent="End">                                                                                                                                                                                         
				<items>                                                                                                                                                                                                                                                    
					<Button text="Change Landscape" press="onChangeLandscape" class="sapUiSmallMargin" width="200px"/>                                                                                                                                                        
					<Button type="Reject" text="{i18n>deleteLandscape}" press="onDeleteLandscape" class="sapUiSmallMargin" width="200px"/>                                                                                                                                    
				</items>                                                                                                                                                                                                                                                   
			</FlexBox>                                                                                                                                                                                                                                                  
			<Table id="table" width="auto" updateFinished="onListUpdateFinished" noDataText="{i18n>detailLineItemTableNoDataText}" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">                                                 
				<headerToolbar>                                                                                                                                                                                                                                            
					<Toolbar id="lineItemsToolbar">                                                                                                                                                                                                                           
						<Title id="lineItemsHeader" text="{i18n>detailHeader}"/>                                                                                                                                                                                                 
					</Toolbar>                                                                                                                                                                                                                                                
				</headerToolbar>                                                                                                                                                                                                                                           
				<columns>                                                                                                                                                                                                                                                  
					<Column>                                                                                                                                                                                                                                                  
						<Text text="{i18n>detailColumnName}"/>                                                                                                                                                                                                                   
					</Column>                                                                                                                                                                                                                                                 
					<Column>                                                                                                                                                                                                                                                  
						<Text text="{i18n>detailColumnName2}"/>                                                                                                                                                                                                                  
					</Column>                                                                                                                                                                                                                                                 
					<Column>                                                                                                                                                                                                                                                  
						<Text text="RFC Client"/>                                                                                                                                                                                                                                
					</Column>                                                                                                                                                                                                                                                 
				</columns>                                                                                                                                                                                                                                                 
			</Table>                                                                                                                                                                                                                                                    
			<HBox justifyContent="End">                                                                                                                                                                                                                                 
				<Button text="{i18n>addSystem}" press="onAddSystem" type="Accept" class="sapUiSmallMargin" width="200px"/>                                                                                                                                                 
				<Button text="{i18n>delSystem}" press="onDeleteSystem" type="Reject" class="sapUiSmallMargin" width="200px"/>                                                                                                                                              
			</HBox>                                                                                                                                                                                                                                                     
			<Table id="idMailTable" width="auto" updateFinished="onListUpdateFinished" noDataText="No mail recepients" busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin">                                                             
				<headerToolbar>                                                                                                                                                                                                                                            
					<Toolbar id="idlineItemsToolbar">                                                                                                                                                                                                                         
						<Title id="idlineItemsHeader" text="Notification emails"/>                                                                                                                                                                                               
					</Toolbar>                                                                                                                                                                                                                                                
				</headerToolbar>                                                                                                                                                                                                                                           
				<columns>                                                                                                                                                                                                                                                  
					<Column>                                                                                                                                                                                                                                                  
						<Text text="Address"/>                                                                                                                                                                                                                                   
					</Column>                                                                                                                                                                                                                                                 
				</columns>                                                                                                                                                                                                                                                 
				<items>                                                                                                                                                                                                                                                    
					<ColumnListItem>                                                                                                                                                                                                                                          
						<cells/>                                                                                                                                                                                                                                                 
					</ColumnListItem>                                                                                                                                                                                                                                         
				</items>                                                                                                                                                                                                                                                   
			</Table>                                                                                                                                                                                                                                                    
			<HBox justifyContent="End" alignContent="SpaceAround">                                                                                                                                                                                                      
				<Button text="Add Recipient" press="onAddMail" type="Accept" class="sapUiSmallMargin" width="200px"/>                                                                                                                                                      
				<Button text="Delete Recipient" press="onDeleteMail" type="Reject" class="sapUiSmallMargin" width="200px"/>                                                                                                                                                
			</HBox>                                                                                                                                                                                                                                                     
		</semantic:content>                                                                                                                                                                                                                                          
	</semantic:DetailPage>                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    