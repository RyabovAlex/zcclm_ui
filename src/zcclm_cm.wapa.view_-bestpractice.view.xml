<mvc:View controllerName="sap.cust.zcclm_cm.controller.BestPractice" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"                                                                                                                        
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:semantic="sap.m.semantic" xmlns:table="sap.ui.table">                                                                                                                                                         
	<semantic:FullscreenPage id="page" title="{i18n>title}: Best practice" showNavButton="true" navButtonPress="onBack"                                                                                                                                           
		class="sapUiResponsiveContentPadding">                                                                                                                                                                                                                       
		<semantic:content>                                                                                                                                                                                                                                           
			<VBox alignItems="Center">                                                                                                                                                                                                                                  
				<items>                                                                                                                                                                                                                                                    
					<table:Table id="idTable" rows="{/BESTPRACTICESet}" selectionMode="None" class="sapUiMediumMargin" visibleRowCount="9">                                                                                                                                   
						<table:columns>                                                                                                                                                                                                                                          
							<table:Column>                                                                                                                                                                                                                                          
								<Label text="Scenario" design="Bold"/>                                                                                                                                                                                                                 
								<table:template>                                                                                                                                                                                                                                       
									<Text text="{Scenario}" wrapping="false"/>                                                                                                                                                                                                            
								</table:template>                                                                                                                                                                                                                                      
							</table:Column>                                                                                                                                                                                                                                         
							<table:Column hAlign="Center">                                                                                                                                                                                                                          
								<Label text="Development" design="Bold"/>                                                                                                                                                                                                              
								<table:template>                                                                                                                                                                                                                                       
									<Switch state="{path:'Dev', formatter: '.toBoolean'}" change="onChange"/>                                                                                                                                                                             
								</table:template>                                                                                                                                                                                                                                      
							</table:Column>                                                                                                                                                                                                                                         
							<table:Column hAlign="Center">                                                                                                                                                                                                                          
								<Label text="Quality Assurance" design="Bold"/>                                                                                                                                                                                                        
								<table:template>                                                                                                                                                                                                                                       
									<Switch state="{path:'Qa', formatter: '.toBoolean'}" change="onChange"/>                                                                                                                                                                              
								</table:template>                                                                                                                                                                                                                                      
							</table:Column>                                                                                                                                                                                                                                         
							<table:Column hAlign="Center">                                                                                                                                                                                                                          
								<Label text="Production" design="Bold"/>                                                                                                                                                                                                               
								<table:template>                                                                                                                                                                                                                                       
									<Switch state="{path:'Prod', formatter: '.toBoolean'}" change="onChange"/>                                                                                                                                                                            
								</table:template>                                                                                                                                                                                                                                      
							</table:Column>                                                                                                                                                                                                                                         
						</table:columns>                                                                                                                                                                                                                                         
					</table:Table>                                                                                                                                                                                                                                            
				</items>                                                                                                                                                                                                                                                   
			</VBox>                                                                                                                                                                                                                                                     
		</semantic:content>                                                                                                                                                                                                                                          
		<semantic:customFooterContent>                                                                                                                                                                                                                               
			<Button press="onPress" text="Enable recommendations" icon="sap-icon://decision" class="sapUiSmallMargin"/>                                                                                                                                                 
		</semantic:customFooterContent>                                                                                                                                                                                                                              
	</semantic:FullscreenPage>                                                                                                                                                                                                                                    
</mvc:View>                                                                                                                                                                                                                                                    