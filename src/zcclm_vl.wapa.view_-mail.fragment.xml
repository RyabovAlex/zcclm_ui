<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.commons.form">                                                                                                                                                                 
	<Dialog title="Add Email">                                                                                                                                                                                                                                    
		<Input id="newMail" value="{Mail}" valueLiveUpdate="true" liveChange="onType"/>                                                                                                                                                                              
		<beginButton>                                                                                                                                                                                                                                                
			<Button text="OK" id="mailSubmit" enabled="false" press="onAddMailCommit"/>                                                                                                                                                                                 
		</beginButton>                                                                                                                                                                                                                                               
		<endButton>                                                                                                                                                                                                                                                  
			<Button text="Cancel" press="onAddMailDialogClose"/>                                                                                                                                                                                                        
		</endButton>                                                                                                                                                                                                                                                 
	</Dialog>                                                                                                                                                                                                                                                     
</core:FragmentDefinition>                                                                                                                                                                                                                                     