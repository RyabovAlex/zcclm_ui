<mvc:View controllerName="sap.cust.zcclm_vl.controller.Master" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"                                                                                                                           
	xmlns:semantic="sap.m.semantic" xmlns="sap.m" xmlns:core="sap.ui.core" displayBlock="true" >                                                                                                                                                                  
	<semantic:MasterPage id="masterpage" title="{i18n>masterTitle}" showNavButton="true">                                                                                                                                                                         
		<semantic:subHeader>                                                                                                                                                                                                                                         
			<Bar id="headerBar">                                                                                                                                                                                                                                        
				<contentMiddle>                                                                                                                                                                                                                                            
					<SearchField id="searchField" tooltip="{i18n>masterSearchTooltip}" width="100%"                                                                                                                                                                           
						search="onSearch"></SearchField>                                                                                                                                                                                                                         
				</contentMiddle>                                                                                                                                                                                                                                           
			</Bar>                                                                                                                                                                                                                                                      
		</semantic:subHeader>                                                                                                                                                                                                                                        
		<semantic:content>                                                                                                                                                                                                                                           
			<PullToRefresh id="pullToRefresh" refresh="onRefresh" updateFinished="onUpdateFinished" busyIndicatorDelay="0"/>                                                                                                                                            
			<List id="list" items="{ path: '/LANDSCAPESet', sorter: { path : 'Id' } }" mode="SingleSelectMaster" updateFinished="onUpdateFinished" selectionChange="onSelectionChange">                                                                                 
				<infoToolbar>                                                                                                                                                                                                                                              
					<Toolbar active="true" id="filterBar" visible="{masterView>/isFilterBarVisible}" press="onOpenViewSettings">                                                                                                                                              
						<Title id="filterBarLabel" text="{masterView>/filterBarLabel}"/>                                                                                                                                                                                         
					</Toolbar>                                                                                                                                                                                                                                                
				</infoToolbar>                                                                                                                                                                                                                                             
				<items>                                                                                                                                                                                                                                                    
					<ObjectListItem press="onSelectionChange" title="{Id}">                                                                                                                                                                                                   
						<attributes>                                                                                                                                                                                                                                             
							<ObjectAttribute text="{Description}" />                                                                                                                                                                                                                
						</attributes>                                                                                                                                                                                                                                            
					</ObjectListItem>                                                                                                                                                                                                                                         
				</items>                                                                                                                                                                                                                                                   
			</List>                                                                                                                                                                                                                                                     
		</semantic:content>                                                                                                                                                                                                                                          
		<semantic:addAction>                                                                                                                                                                                                                                         
			<semantic:AddAction id="addLandscape" press="onAddLandscape"/>                                                                                                                                                                                              
		</semantic:addAction>                                                                                                                                                                                                                                        
		</semantic:MasterPage>                                                                                                                                                                                                                                       
	</mvc:View>                                                                                                                                                                                                                                                   